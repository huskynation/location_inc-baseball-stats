<div id="home-title"> 
    <h1 class="text-center">Player Stats HomePage</h1>
    <h2>Total # of Players: <%= Player.all.count%></h2>
    <h2>Worst Average: <%= Player.all.min.try(:first) %></h2>
    <h2>Best Average: <%= Player.all.max.try(:first) %></h2>
</div>


<table class="table table-striped table-hover">
  <thead id="col-header">
    <tr>
      <th><%= sorted "id", "PLAYER" %></th>
      <th><%= sorted "First" %></th>
      <th><%= sorted "Last" %></th>
      <th><%= sorted "Position" %></th>
      <th><%= sorted "avg" %></th>
      <th><%= sorted "HR"  %></th>
      <th><%= sorted "RBI" %></th>
      <th><%= sorted "Runs" %></th>
      <th><%= sorted "SB"  %></th>
      <th><%= sorted "OPS" %></th>
    </tr>
  </thead>
  
  <% @players.each do |player| %>
  <tbody>
    <tr>
      <th scope="row"><%= player.id %></th>
      <td><%= player.first %></td>
      <td><%= player.last %></td>
      <td><%= player.position %></td>
        <td><%= number_to_percentage(player.avg, precision: 3) %></td>
        <td><%= player.hr %></td>
        <td><%= player.rbi %></td>
        <td><%= player.runs %></td>
        <td><%= player.sb %></td>
        <td><%= number_to_percentage(player.ops, precision: 3) %></td>
    </tr>
  </tbody>
      <% end %>
</table>

<div id="page_links">
  <%= will_paginate @players, remote: true, renderer: BootstrapPagination::Rails %>
</div>

<div id="sign-out"> 
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-lg btn-primary" %>
</div>

