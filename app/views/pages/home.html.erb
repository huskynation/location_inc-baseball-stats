<div id="home-title"> 
    <h1 class="text-center">1998 MLB Player Stats</h1>
    <h2>Total # of Players: <%= Player.all.count%></h2>
    <h2>Worst Average: <%= number_to_percentage(Player.all.min.try(:avg)) %></h2>
    <h2>Best Average: <%= number_to_percentage(Player.all.max.try(:avg)) %></h2>
</div>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= sorted "id", "PLAYER" %></th>
      <th><%= sorted "First" %></th>
      <th><%= sorted "Last" %></th>
      <th><%= sorted "Position" %></th>
      <th><%= sorted "avg" %></th>
      <th><%= sorted "HR"  %></th>
      <th><%= sorted "RBI" %></th>
      <th><%= sorted "Runs" %></th>
      <th><%= sorted "SB"  %></th>
      <th><%= sorted "OPS" %></th>
    </tr>
  </thead>
  
  <tbody id="players">
    <%= render "pages/players" %>
  </tbody>
</table>

<div id="players_pagination">
  <%= will_paginate @players, renderer: BootstrapPagination::Rails %>
</div>

<script>
 $(function(){
   $('.pagination a').attr('data-remote', 'true')
 });
</script>

<div id="sign-out"> 
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-lg btn-primary" %>
</div>

