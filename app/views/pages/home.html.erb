<div id="home-title"> 
    <h1 class="text-center">Player Stats HomePage</h1>
    <h2>Total # of Players: <%= Player.all.count%></h2>
    <h2>Worst Average: <%= Player.all.min.try(:first) %></h2>
    <h2>Best Average: <%= Player.all.max.try(:first) %></h2>
    <h2>League Average: <%= number_to_percentage(Player.average(:avg)) %></h2>
</div>


<table class="table table-striped table-hover">
  <thead id="col-header">
    <tr>
      <th><%= "PLAYER" %></th>
      <th><%= sort_column "First" %></th>
      <th><%= sort_column "Last" %></th>
      <th><%= sort_column "Position" %></th>
      <th><%= sort_column "Hits" %></th>
      <th><%= sort_column "Bats" %></th>
      <th><%= sort_column "Average" %></th>
      <th><%= sort_column "HomeRuns"  %></th>
      <th><%= sort_column "RBIs" %></th>
      <th><%= sort_column "Stolen"  %></th>
      <th><%= sort_column "OPS" %></th>
      <th><%= sort_column "Runs" %></th>
    </tr>
  </thead>
  
  <% @players.each do |player| %>
  <tbody>
    <tr>
      <th scope="row"><%= player.id %></th>
      <td><%= player.first %></td>
      <td><%= player.last %></td>
      <td><%= player.position %></td>
      <td><%= player.hits %></td>
      <td><%= player.bats %></td>
        <td><%= number_to_percentage(player.avg, precision: 3) %></td>
        <td><%= player.hr %></td>
        <td><%= player.rbi %></td>
        <td><%= player.sb %></td>
        <td><%= player.ops %></td>
        <td><%= player.runs %></td>
    </tr>
  </tbody>
      <% end %>
</table>

<div id="sign-out"> 
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-lg btn-primary" %>
</div>


        


